{

 "compilerOptions": {
    "jsx": "react-jsx", // For React 17+ with new JSX runtime
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },

  "include": [
    "src"
  ]
}
